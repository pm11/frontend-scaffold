{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist/",
    "jsx": "react",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "dom"
    ],
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "typings/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.*"
  ]
}
